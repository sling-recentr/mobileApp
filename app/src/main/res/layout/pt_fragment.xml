<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PTFragment"
        tools:ignore="ExtraText">


    <ProgressBar
            android:id="@+id/determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tvExTitle"
            android:layout_marginTop="10dp"
            android:progress="10"
            android:progressTint="@color/trustUsWithYourDataBlue"/>


    <TextView
            android:id="@+id/tvExTitle"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:text="@string/rehabilitation_exercises"
            app:layout_constraintTop_toBottomOf="@id/determinateBar"/>
    />


    <ListView
            android:id="@+id/lv_items"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/tvExTitle"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorPrimary"
            tools:targetApi="lollipop" tools:ignore="MissingConstraints"/>

</FrameLayout>