<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PTActivity"
        tools:ignore="ExtraText">


    <TextView
            android:id="@+id/exercise_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercises"
            android:textSize="32sp"
            android:textColor="@color/trustUsWithYourDataBlue"
            android:gravity="center_horizontal"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/pt_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/exercise_title"
    />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorPrimary"
            tools:targetApi="lollipop" tools:ignore="MissingConstraints"/>

</FrameLayout>